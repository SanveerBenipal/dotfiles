" Enable line numbers
set number

" Show matching parentheses
set showmatch

" Set 4 spaces per tab
set tabstop=4
set shiftwidth=4
set expandtab

" Enable syntax highlighting
syntax on

" Enable auto-indenting
set autoindent
set smartindent

" Highlight search results
set hlsearch

" Ignore case when searching
set ignorecase
set smartcase

